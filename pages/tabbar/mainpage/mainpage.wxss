@import "/modules/viewpager/viewpager.wxss";
@import "/modules/statisticspage/statisticspage.wxss";
.main_global {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
}

.main_loop {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    align-items: stretch;
    width: 100%;
    height: 150px;
}

.main_showinfo {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
    align-items: stretch;
    width: 100%;
    background-color: white;
}

.main_operation {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /* justify-content: space-around; */
    align-items: center;
    /* width: 100%; */
    height: 80rpx;
    margin: 10rpx 20rpx;
    border-radius: 15rpx;
    /* border-bottom: 1rpx solid #F6F6F6; */
    background-color: #F6F6F6;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-top: 4rpx;
    padding-bottom: 4rpx;
}

.main_add_rocord_label {
    font-size: 28rpx;
    margin: 8rpx;
}

.main_add_record_button {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    margin: 8rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
}

.main_list {
    display: flex;
    /* width: 100%; */
    height: 150rpx;
    flex-direction: row;
    justify-content: stretch;
    align-items: center;
    padding: 4rpx;
    background-color: #F6F6F6;
    margin: 10rpx 20rpx;
    border-radius: 15rpx;
}

.main_separation {
    background-color: rgb(246, 246, 246);
    width: 100%;
    height: 1px;
}

.main_avatar_image {
    width: 60px;
    height: 60px;
    border-radius:  30px;
    margin: 10rpx;
}

.main_list_part2 {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    font-size: 27rpx;
}

.main_list_part3 {
    display: flex;
    flex: 0 0 auto;
    flex-direction: column;
    align-items: flex-end;
    padding: 8rpx;
    margin-right: 12px;
}

.main_list_info {
    width: 35px;
    height: 35px;
    align-items: center;
}

.main_list_tip {
    font-size: 25rpx;
}