<view class="main_global">
  <view id="mainpage" class="main_loop">
      <include src="/modules/viewpager/viewpager.wxml"/>
  </view>
  <view class="main_showinfo">
    <include src="/modules/statisticspage/statisticspage.wxml"/>
  </view>
  <view class="main_operation">
      <text class="main_add_rocord_label">我的日记</text>
      <text class="main_add_record_button" bindtap='addRecord'>添加日记</text>
  </view>
  <view id="{{itemName.id}}" wx:for="{{array}}" wx:for-index="index"  wx:for-item="itemName">
    <view class="main_list">
        <image class="main_avatar_image" src="{{itemName.url}}"/>
        <text class='main_list_part2'>{{itemName.info}}</text>
        <view class="main_list_part3">
            <view class='main_list_info'></view>
            <text class='main_list_tip'>{{itemName.unique}}</text>
        </view>
    </view>
    <view class="main_separation"></view>

    </view>
</view>