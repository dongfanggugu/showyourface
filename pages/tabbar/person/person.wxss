
.person_globla {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100px;
    flex: 1 1 auto;
}

.person_info {
    display:flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 240rpx;
    width: 100%;
    background-color: bisque;
}

.person_list {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 66rpx;
    padding: 4rpx;
}

.itemContainer {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
  }

  .person_separator {
    width: 100%;
    height: 1px;
    background-color: lightgray;
  }
  
  .itemTextContainer {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-left: 40rpx;
  }
  
  .imgItem {
    width: 200rpx;
    height: 200rpx;
    margin: 8rpx;
  }
  
  .lableItem {
    margin-top: 3rpx;
    display: inline-table;
    font-size: 30rpx;
  }

