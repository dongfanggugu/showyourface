}

.person_product_tag_parent {
  display: flex;
  flex: 1 1 auto;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
}

.person_product_tag {
  border: 1px solid rgb(241, 241, 241);
  border-radius: 24rpx;
