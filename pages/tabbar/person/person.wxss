
.person_globla {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100px;
    flex: 1 1 auto;
}

.person_info {
    display:flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 240rpx;
    width: 100%;
    background-color: bisque;
}

.person_list {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 66rpx;
    padding: 4rpx;
}

.itemContainer {
    display: flex;
    flex: 0 0 auto;
    flex-direction: row;
    justify-content: flex-start;
    /* flex-wrap: wrap; */
    align-items: center;
  }

  .person_separator {
    width: 100%;
    /* height: 1px dashed;
    background-color: rgb(240, 240, 240); */
    border-top:1px rgb(240, 240, 240) dashed;
  }

  .itemImageContainer {
    display: flex;
    flex: 0 0 auto;
    flex-direction: row;
    justify-content: flex-start;
    /* flex-wrap: wrap; */
    align-items: center;
  }
  
  .itemTextContainer {
    display: flex;
    flex:1 1 auto;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    margin-left: 40rpx;
  }
  
  .imgItem {
    flex:0 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2);
  }
  
  .lableItem {
    margin-top: 3rpx;
    display: inline-table;
    font-size: 30rpx;
    text-align: center;
    margin-left: 14rpx;
    margin-bottom: 10rpx;
    color: rgb(255, 57, 99);
    font-weight: bold;
  }

