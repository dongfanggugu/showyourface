/* pages/tabbar/tabbar.wxss */
@import "./tabitem/record.wxss";
@import "./mainpage/mainpage.wxss";
@import "./person/person.wxss";
@import "/modules/viewpager/viewpager.wxss";

.content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  flex: 1 0 auto;
  background: red;
  height: 10px;
  /* white-space: nowrap; */
}

.scroll {
  display: flex;
  flex: 1 1 auto;
  height: 10px;
  background-color: blue;
}

.bottom {
    display: flex;
    flex: 0 0 auto;
    background-color: aqua;
    width: 100%;
    height: 96rpx;
    padding: 4rpx;
    flex-direction: row;
    justify-content: space-around;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.itempage {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 200px;
  background-color: rebeccapurple;
}