.post_global {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100%;
}

.post_sel {
    display:flex;
    flex-direction: row;
    justify-content: stretch;
    align-items: center;
    height: 100rpx;
    width: 100%;
}

.post_product_photo {
    display:flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding: 16rpx;
    font-weight: bold;
    margin: 10rpx;
    /* border-radius: 15rpx; */
    /* align-items: center; */
}

.post_breaker {
    padding: 20rpx;
    padding-bottom: 10rpx;
    margin-top: 35rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;

    background-color: #F6F6F6;
}


.post_skin_photo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: start;
    padding: 16rpx;
    font-weight: bold;
    margin: 10rpx;
}

.post_brand_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 1 1 0;
    margin-left: 16rpx;
    margin-top: 8rpx;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 2 1 0; 
    margin-left: 8rpx;
    margin-top: 8rpx;
    margin-right: 16rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_text {
    font: medium;
    font-size: 32rpx;
    margin-bottom: 24rpx;
}

.post_product_image_view {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-radius: 35rpx;
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2);
    /* background:linear-gradient(to right, rgb(252, 48, 97), rgb(252, 90, 65)); */
}

.post_product_input_parent {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding: 16rpx;
}

.post_product_input1 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-right: 8rpx;
    width: 47%;
}

.post_product_input2 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-left: 8rpx;
    width: 47%;
}

.post_product_tag_parent {
    display: flex;
    flex: 1 1 auto;
    flex-direction: row;
    align-items: flex-start;
    flex-wrap: wrap;
    margin: 10rpx;
}

.post_product_tag_sel {
    border-radius: 24rpx;
    padding-left: 18rpx;
    padding-right: 18rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    margin: 10rpx;
    height: 40rpx;
    line-height: 60rpx;
    font-size: 27rpx;
    text-align: center;
    color:white;
    /* background:linear-gradient(rgb(253,154,136),rgb(248,0,72)); */
    background:linear-gradient(to right, rgb(252, 48, 97), rgb(252, 90, 65));
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2); 
}

.post_product_tag {
    border: 2rpx solid rgb(241, 241, 241);
    border-radius: 24rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    margin: 10rpx;
    height: 40rpx;
    line-height: 60rpx;
    font-size: 27rpx;
    text-align: center;
    color:rgb(81, 81, 81);
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2); 
}

.post_product_tag_add {
    border: 3rpx dashed rgb(241, 241, 241);
    border-radius: 24rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    margin: 10rpx;
    height: 40rpx;
    line-height: 60rpx;
    font-size: 27rpx;
    text-align: center;
    color:rgb(81, 81, 81);
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2); 
}

.post_daily_des {
    border: 1px solid gray;
    font-size: 25rpx;
    margin: 16rpx;
}

.post_complete_parent {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.post_complete {
    border-radius: 30rpx;
    margin: 32rpx;
    font: bold;
    color: white;
    font-size: 35rpx;
    text-align: center;
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    /* background:linear-gradient(rgb(253,154,136),rgb(248,0,72)); */
    background:linear-gradient(to right, rgb(252, 48, 97), rgb(252, 90, 65));
    box-shadow: 8rpx 8rpx 8rpx rgba(0, 0, 0, .2);
}

.post_pro_img_del {
    flex:0 0 auto;
    margin-left: -40rpx;
    margin-top: -190rpx;
    width: 15px;
    height: 15px;
}