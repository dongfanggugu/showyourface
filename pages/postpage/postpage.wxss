.post_globla {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100;
}

.post_sel {
    display:flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
    width: 100%;
}

.post_product_photo {
    display:flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding: 16rpx;
}

.post_skin_photo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: start;
    padding: 16rpx;
}

.post_brand_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 1 1 0;
    margin-left: 16rpx;
    margin-top: 8rpx;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 2 1 0; 
    margin-left: 8rpx;
    margin-top: 8rpx;
    margin-right: 16rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_text {
    font: medium;
    font-size: 28rpx;
    margin-bottom: 24rpx;
}

.post_product_image_view {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.post_product_image {
    width: 240rpx;
    height: 320rpx;
}

.post_product_image_sel {
    font-size: 25rpx;
    margin-left: 64rpx;
    border: 1px solid gray;
    border-radius: 8rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
}

.post_product_input_parent {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding: 16rpx;
}

.post_product_input1 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-right: 8rpx;
    width: 47%;
}

.post_product_input2 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-left: 8rpx;
    width: 47%;
}

.post_product_tag_parent {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    flex-wrap: wrap;
}

.post_product_tag {
    border: 1px solid gray;
    border-radius: 24rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin: 16rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    text-align: center;
}

.post_daily_des {
    border: 1px solid gray;
    font-size: 25rpx;
    margin: 16rpx;
}

.post_complete_parent {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.post_complete {
    margin: 32rpx;
    font: medium;
    font-size: 35rpx;
    text-align: center;
    width: 300rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color:#FF4081;
}