.post_globla {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100;
}

.post_sel {
    height: 0px;
}

.post_product_photo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding: 16rpx;
}

.post_skin_photo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: start;
    padding: 16rpx;
}

.post_brand_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 1 1 0;
    margin-left: 16rpx;
    margin-top: 8rpx;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_sel {
    border: 1px solid lightgray;
    font-size: 25rpx;
    flex: 2 1 0;
    margin-left: 8rpx;
    margin-top: 8rpx;
    margin-right: 16rpx;
    margin-bottom: 8rpx;
    padding: 8rpx;
}

.post_product_text {
    font: medium;
    font-size: 28rpx;
    margin-bottom: 24rpx;
}

.post_product_image_view {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.post_product_input_parent {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding: 16rpx;
}

.post_product_input1 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-right: 8rpx;
    width: 47%;
}

.post_product_input2 {
    border: 1px solid gray;
    height: 30rpx;
    font-size: 25rpx;
    margin-left: 8rpx;
    width: 47%;
}

.post_product_tag_parent {
    display: flex;
    flex: 1 1 auto;
    flex-direction: row;
    align-items: flex-start;
    flex-wrap: wrap;
    margin: 4px;
}

.post_product_tag_sel {
    border: 1px solid rgba(241, 241, 241, 0);
    border-radius: 20rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin: 4px;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    text-align: center;
    color: white;
    background: linear-gradient(rgb(253, 154, 136), rgb(248, 0, 72));
}

.post_product_tag {
    border: 1px solid rgb(241, 241, 241);
    border-radius: 24rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin: 4px;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    text-align: center;
    color: rgb(81, 81, 81);
}

.post_daily_des {
    border: 1px solid gray;
    font-size: 25rpx;
    margin: 16rpx;
}

.post_complete_parent {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.post_complete {
    border-radius: 30rpx;
    margin: 32rpx;
    font: bold;
    color: white;
    font-size: 35rpx;
    text-align: center;
    height: 60rpx;
    width: 100%;
    line-height: 60rpx;
    background: linear-gradient(rgb(253, 154, 136), rgb(248, 0, 72));
}